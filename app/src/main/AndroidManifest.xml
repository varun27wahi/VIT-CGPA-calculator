<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demonzblood.vitcgpacalculator">

    <application
        android:allowBackup="true"
        android:icon="@drawable/cgpa_calculator_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GPAActivity"
            android:label="@string/title_activity_gpa"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CGPAActivity"
            android:label="@string/title_activity_cgpa"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>